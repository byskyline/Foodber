
<h1>This is My Forum</h1>
<table class="table">
	<tr>
		<td>Topic</td>
		<td>Comments</td>
		<td></td>
		<td></td>
		<td></td>
	</tr>

	<tr><% @articles.each do |article|%>
		<td>
			<%= "#{article.topic}"%>
		</td>
		<td>
			<%= "#{article.comments.count}"%>
		</td>

		<td>
			<%= link_to "show", article_path(article), :class=> "btn btn-default"%>
		</td>
		<td>
			<%= link_to "edit", edit_article_path(article), :class=> "btn btn-default"%>
		</td>
		<td>
			<%= link_to "delete", article_path(article), :method =>:delete, :class=> "btn btn-danger" %>
		</td>
	
	</tr>

	<%end%>
</table>

<p><%= link_to 'Add new article', new_article_path, :class=> "btn btn-default"%></p>
