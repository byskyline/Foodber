
<%= form_for @article, :url => articles_path, :class => "form" do |f|%>

<div class="form-group">
	<%= f.label :topic, "餐點名稱： " %>
	<%= f.text_field :topic, :class => "form-control"  %>
</div>
<div class="form-group">
  <%="餐點圖片上傳"%>
  <%= f.file_field :logo %>
 <!-- <%= check_box_tag "_remove_logo","1"%> Remove Logo -->
</div>
<div class="form-group">
	<%= f.collection_check_boxes(:category_ids, Category.all, :id, :title) %>
</div>
<div class="form-group">
   <%= f.label :tag_list,"餐車名稱標籤：" %>
   <%= f.text_field :tag_list, :class => "form-control" %>
</div>
<div class="form-group">
	<%= f.label :content, "敘述：" %>

	<%= f.text_area :content , :class => "form-control"%>
</div>
<div class="form-group">
   <%= f.label :price ,"價格："%>
   <%= f.text_field :price, :class => "form-control" %>
</div>
	<%= f.submit "Create"%>
<% end %>