<%= form_for @profile, :url => user_profile_path(@user), :method => :patch do |f| %>
<div class="form-group">
  <%= f.label :name, "姓名: " %>
  <%= f.text_field :name  %>
</div>
<div class="form-group">
  <%= f.label :description, "自介: " %>
  <%= f.text_area :description  %>
</div>

  <%= f.submit "Create"%>
<% end %>